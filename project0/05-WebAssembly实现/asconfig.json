{
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "textFile": "build/debug.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "build/release.wasm",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": false,
      "noAssert": false
    }
  },
  "options": {
    "bindings": "esm",
    "importMemory": true,
    "initialMemory": 256,
    "maximumMemory": 512,
    "stackSize": 1024,
    "exportRuntime": true,
    "exportTable": true,
    "exportMemory": true,
    "runtime": "stub",
    "use": "abort=assembly/index/abort"
  }
} 