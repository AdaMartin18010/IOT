    "dayjs": "^1.11.10",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "js-cookie": "^3.0.5",
    "crypto-js": "^4.2.0",
    "socket.io-client": "^4.7.4",
    "mqtt": "^5.3.4",
    "monaco-editor": "^0.45.0",
    "vue-monaco": "^1.2.2",
    "d3": "^7.8.5",
    "three": "^0.158.0",
    "gsap": "^3.12.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.22",
    "typescript": "^5.2.2",
    "@types/node": "^20.9.0",
    "@types/lodash-es": "^4.17.12",
    "@types/nprogress": "^0.2.3",
    "@types/js-cookie": "^3.0.6",
    "@types/crypto-js": "^4.2.1",
    "@types/d3": "^7.4.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint-plugin-vue": "^9.18.1",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "vitest": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "jsdom": "^23.0.1",
    "vue-test-utils": "^2.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "sass": "^1.69.5",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.25.2",
    "vite-plugin-pwa": "^0.17.4",
    "workbox-window": "^7.0.0"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less,html,md,json}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/iot-semantic-gateway.git"
  },
  "keywords": [
    "iot",
    "semantic",
    "gateway",
    "vue",
    "typescript",
    "dashboard"
